<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="people-nearby">
            <% @users.each do |user| %>
                <div class="nearby-user">
                  <div class="row">
                    <div class="col-md-2 col-sm-2">
                      <img src="<%= user.photo %>" alt="<%= user.name %>" class="profile-photo-lg">
                    </div>
                  <div class="col-md-7 col-sm-7">
                    <h5 class="mt-2"><a href="#" class="profile-link fs-3"><%= link_to user.name, user_path(user) %></a></h5>
                  </div>
                  <div class="col-md-3 col-sm-3">
                    <p class="text-muted mt-5">Number of posts <%= user.post_counter %></p>
                  </div>
                </div>
              </div>
            <% end %>
            </div>
    	</div>
	</div>
</div>